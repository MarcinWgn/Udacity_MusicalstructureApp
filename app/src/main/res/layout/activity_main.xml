<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context="com.example.marcin.wegrzyn.musicalstructureapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/songsBtn"
            style="@style/headerButtonStyle"
            android:text="@string/songs" />

        <Button
            android:id="@+id/artistBtn"
            style="@style/headerButtonStyle"
            android:text="@string/artist" />

        <Button
            android:id="@+id/genreBtn"
            style="@style/headerButtonStyle"
            android:text="@string/genre" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center"
        android:text="@string/text_main_activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prevBtn"
            style="@style/bottomButtonStyle"
            android:text="@string/prev" />

        <Button
            android:id="@+id/playBtn"
            style="@style/bottomButtonStyle"
            android:text="@string/play" />

        <Button
            android:id="@+id/nextBtn"
            style="@style/bottomButtonStyle"
            android:text="@string/next" />

    </LinearLayout>

</LinearLayout>
